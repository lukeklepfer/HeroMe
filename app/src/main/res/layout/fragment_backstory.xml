<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lukeklepfer.com.herome.fragments.BackstoryFragment"
    android:background="@drawable/hero_bg_gradient">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Superman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textColor="#fac740" />

        <TextView
            android:text="Backstory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textColor="@android:color/background_light"
            android:layout_marginTop="23dp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Laser Vision"
            android:layout_width="300dp"
            android:id="@+id/laserBtn"
            android:background="@drawable/herobutton"
            android:layout_height="50dp"
            android:textColor="#fac740"
            android:textAlignment="center"
            android:drawableLeft="@drawable/laser_vision"
            android:paddingLeft="5dp"
            android:elevation="0dp"
            android:layout_gravity="center_horizontal"
            android:paddingRight="10dp"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="Super Strength"
            android:layout_width="300dp"
            android:id="@+id/superBtn"
            android:background="@drawable/herobutton"
            android:layout_height="50dp"
            android:textColor="#fac740"
            android:textAlignment="center"
            android:drawableLeft="@drawable/super_strength"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:elevation="0dp"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:layout_below="@+id/laserBtn"
            android:layout_alignLeft="@+id/laserBtn"
            android:layout_alignStart="@+id/laserBtn"
            android:layout_marginTop="10dp" />

        <TextView
            android:text="The origin story of Superman relates that he was born Kal-El on the alien planet Krypton, before being rocketed to Earth as an infant by his scientist father Jor-El, moments before Krypton's destruction. Discovered and adopted by a Kansas farmer and his wife, the child is raised as Clark Kent and imbued with a strong moral compass."
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="17sp"
            android:textAlignment="textStart"
            android:layout_below="@+id/imageView3"
            android:layout_alignLeft="@+id/laserBtn"
            android:layout_alignStart="@+id/laserBtn" />

        <ImageView
            app:srcCompat="@drawable/super_man_crest"
            android:id="@+id/imageView3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

    </RelativeLayout>

</FrameLayout>
